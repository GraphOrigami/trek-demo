<a href="/treks/{{trekId}}.html" class="card">
  <img src="{{image}}" />
  <span class="price">from {{price}}</span>
  <div class="content">
    <div class="facts">
      <div>
        <div class="value">{{days}}</div>
        <div class="label">Days</div>
      </div>
      <div>
        <div class="value">{{groupSize}}</div>
        <div class="label">Max Group Size</div>
      </div>
      <div>
        <div class="value">{{difficulty}}</div>
        <div class="label">Difficulty</div>
      </div>
    </div>
    <div class="category">{{category}}</div>
    <div class="info">
      <div class="name">{{name}}</div>
      <div class="destination">{{destination}}</div>
    </div>
  </div>
</a>