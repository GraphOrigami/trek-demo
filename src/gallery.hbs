{{#> page title="Gallery" areaIsGallery=true}}
  <script src="/assets/js/gallery.js"></script>
  <!--  Slider  -->
  <div id="flexslider" class="fullpage-wrap small">
    <ul class="slides">
      <li style="background-image:url(assets/img/trips/trip9.jpg)">
        <div class="container text text-center">
          <h1 class="white margin-bottom-small">Gallery</h1>
          <p class="heading white">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Unde veniam aperiam rerum quis atque, illum.</p>
        </div>
        <div class="gradient dark"></div>
      </li>
    </ul>
  </div>
  <!--  END Slider  -->
  <div id="page-wrap" class="content-section fullpage-wrap">
    <!--  Gallery Section  -->
    <div id="gallery">
      {{#each @root}}
        <img src="/assets/img/trips/{{this}}">
      {{/each}}
    </div>
    <!--  END Gallery Section  -->
  </div>
{{/page}}
